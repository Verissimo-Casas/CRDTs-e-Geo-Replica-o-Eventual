{
  "dashboard": {
    "id": null,
    "title": "CRDT Distributed System Dashboard",
    "tags": ["crdt", "distributed", "monitoring"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Likes Total by Region",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(likes_total[5m])",
            "legendFormat": "{{region}}",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 0
        },
        "yaxes": [
          {
            "format": "short",
            "label": "Likes per second"
          },
          {
            "format": "short"
          }
        ]
      },
      {
        "id": 2,
        "title": "Stats Latency",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(stats_latency_ms_bucket[5m]))",
            "legendFormat": "95th percentile",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.50, rate(stats_latency_ms_bucket[5m]))",
            "legendFormat": "50th percentile",
            "refId": "B"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 0
        },
        "yaxes": [
          {
            "format": "ms",
            "label": "Latency"
          },
          {
            "format": "short"
          }
        ]
      },
      {
        "id": 3,
        "title": "CRDT Divergence",
        "type": "gauge",
        "targets": [
          {
            "expr": "crdt_divergence",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 0,
          "y": 8
        },
        "fieldConfig": {
          "defaults": {
            "min": 0,
            "max": 100,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "orange",
                  "value": 10
                },
                {
                  "color": "red",
                  "value": 50
                }
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "Service Availability",
        "type": "stat",
        "targets": [
          {
            "expr": "up{job=~\"api-.*\"}",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 8,
          "y": 8
        },
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {
                "options": {
                  "0": {
                    "text": "DOWN",
                    "color": "red"
                  },
                  "1": {
                    "text": "UP",
                    "color": "green"
                  }
                },
                "type": "value"
              }
            ]
          }
        }
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {},
    "templating": {
      "list": []
    },
    "annotations": {
      "list": []
    },
    "refresh": "30s",
    "schemaVersion": 27,
    "version": 0,
    "links": []
  }
}
